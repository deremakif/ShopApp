@model Product

<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/img/@Model.ImageUrl" alt="@Model.Name"/>
        <div class="card-body">
            <h4 class="card-title">
                <a href="#">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fas fa-lira-sign"></i>@Model.Price
            </small>
        </div>
        <div class="card-footer text-center">
            <a href="#" class="btn btn-outline-primary btn-sm">Details</a>
            <a href="#" class="btn btn-outline-primary btn-sm ml-3" >Add To Cart</a>

        </div>
    </div>
</div>